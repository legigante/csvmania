<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{ 'app.title'|trans }} v{{ 'app.version'|trans }} {{ app.environment }}{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/app.css') }}">
        {% endblock %}

    </head>
    <body>
        <header>
            <nav class="navbar">
                <div class="container-fluid">
                    <!-- Brand, toggle pour l'affichage en version mobile -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span><i class="fa fa-bars"></i></span>
                        </button>
                        <a class="navbar-brand" title="{{ 'menu.welcome'|trans }}" href="#">{{ 'app.title'|trans }} v{{ 'app.version'|trans }}</a>
                    </div>
                    <!-- Liens de navigation, formulaires et autres -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            {% block menu %}

                            {% endblock %}
                        </ul>

                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <ul class="nav navbar-nav navbar-right" id="menuDroite">
                                <li><a href="{{ path('logout') }}" title="{{ 'login.see_profil'|trans }}"><i class="fa fa-user"></i> {{ app.user.firstName }} {{ app.user.lastName }}</a></li>
                                <li><a href="{{ path('logout') }}" title="{{ 'login.change_pwd'|trans }}">{{ 'login.change_pwd'|trans }} </a></li>
                                <li><a href="{{ path('logout') }}" title="{{ 'login.log_out'|trans }}">{{ 'login.log_out'|trans }} <i class="fa fa-sign-out"></i></a></li>
                            </ul>
                        {% endif %}
                    </div>

                </div>
            </nav>
        </header>

        <div id="main" class="container">
            {% block body %}{% endblock %}
        </div>

        <footer>
            <p>
                <a href="{{ path('home') }}" title="{{ 'menu.welcome'|trans }}">{{ 'app.title'|trans }} v{{ 'app.version'|trans }} {{ app.environment }}</a> Â© 2018 - <a href="{{ path('about') }}" title="{{ 'menu.about'|trans }}">MP3000</a>
            </p>
        </footer>

        {% block javascripts %}
            <script src="{{ asset('build/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
